@model IEnumerable<PetStore.ViewModels.ListAllProductsViewModel>

@{
    ViewData["Title"] = "All";
}

<div class="active-pink-3 active-pink-4 mb-4">
    <form asp-action="Search" method="get">
        <div><input class="form-control" type="text" placeholder="Search" aria-label="Search"></div>
        <div class="form-group text-center">
            <input type="submit" name="Search" value="Search" class="btn btn-dark" />
        </div>
    </form>
</div>

<div class="text-black-50 text-center">
    <h1>All</h1>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.ProductId">Edit</a>>
                    <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.ProductId">Details</a>>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="text-center">
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
